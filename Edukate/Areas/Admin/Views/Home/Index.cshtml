@model IEnumerable<InstructorListItemVm>

<a asp-action="Create">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.ProfessionName</td>
                    <td><img src="~/@item.ImgUrl" style="width: 60px;" /></td>
                    <td><a asp-action="Updated" class="btn btn-warning" asp-route-id="@item.Id">Updated</a></td>
                    <td><a asp-action="Deleted" class="btn btn-danger" asp-route-id="@item.Id">Deleted</a></td>
                </tr>
            }
        }
    </tbody>
</table>